<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_vnitpro_contract_formality_tree" model="ir.ui.view">
            <field name="name">vnitpro.contract.formality.tree</field>
            <field name="model">vnitpro.contract.formality</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Contract Formality">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="activate"/>
                </tree>
            </field>
        </record>
        <record id="view_vnitpro_contract_formality_form" model="ir.ui.view">
            <field name="name">vnitpro.contract.formality.form</field>
            <field name="model">vnitpro.contract.formality</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Contract Formality" duplicate="0">
                    <header>
                        <field name="activate" widget="statusbar" clickable="True"
                               options="{'fold_field': 'fold'}"/>
                    </header>
                    <sheet>
                        <group colspan="4" col="4" name="main">
                            <field name="code"/>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_vnitpro_contract_formality_search" model="ir.ui.view">
            <field name="name">vnitpro.contract.formality.search</field>
            <field name="model">vnitpro.contract.formality</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Contract Formality">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="activate"/>
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="act_open_vnitpro_contract_formality_view">
            <field name="name">Contract Formality</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vnitpro.contract.formality</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_vnitpro_contract_formality_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_vnitpro_contract_formality_view_form">
            <field name="act_window_id" ref="act_open_vnitpro_contract_formality_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_vnitpro_contract_formality_form"/>
        </record>
        <record model="ir.actions.act_window.view" id="act_open_vnitpro_contract_formality_view_tree">
            <field name="act_window_id" ref="act_open_vnitpro_contract_formality_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_vnitpro_contract_formality_tree"/>
        </record>
    </data>
</odoo>